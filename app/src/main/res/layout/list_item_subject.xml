<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:id="@+id/subject_layout">

    <TextView
        android:id="@+id/subject_name"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="17dp"
        android:text="Название крутого предмета"
        android:background="@drawable/ripple_without_border"
        style="@style/StyleTextViewPrimary" />

    <TextView
        android:id="@+id/subject_assessment_type"
        android:layout_alignStart="@+id/subject_name"
        android:layout_below="@+id/subject_name"
        android:layout_marginEnd="20dp"
        android:paddingBottom="21dp"
        android:text="Зачет"
        style="@style/StyleTextViewSecondary"
        android:textSize="13sp"/>

</RelativeLayout>