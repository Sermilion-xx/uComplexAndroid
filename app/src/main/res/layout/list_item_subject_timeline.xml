<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/subject_mark_image"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginBottom="17dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="17dp"
        android:src="@mipmap/ic_no_image"
        android:contentDescription="@string/subject_image" />


    <TextView
        android:id="@+id/subject_name"
        android:lines="1"
        android:layout_toEndOf="@id/subject_mark_image"
        android:layout_alignTop="@id/subject_mark_image"
        android:text="Название какого-то беспонтового документа dsfdsf dsfsdf sdf ds fs dfds f"
        style="@style/StyleTextViewPrimary"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/subject_time_icon"
        android:layout_marginTop="5dp"
        android:layout_marginStart="26dp"
        android:layout_below="@id/subject_name"
        android:layout_toEndOf="@id/subject_mark_image"
        style="@style/StyleRecyclerSubText"
        android:text="@string/clock_icon"/>

    <TextView
        android:id="@+id/subject_time"
        android:layout_marginStart="5dp"
        android:lines="1"
        android:layout_toEndOf="@id/subject_time_icon"
        android:layout_below="@id/subject_name"
        android:text="dfsfsdfsf"
        style="@style/StyleRecyclerSubText"
        android:layout_marginTop="3dp" />

</RelativeLayout>

