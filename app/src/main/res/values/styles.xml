<resources>

    <style name="ParentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme" parent="ParentTheme">

        <item name="actionBarStyle">@style/MyActionBarTheme</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionMenuTextColor">@color/color_uc_ListTextColorPrimary</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/color_uc_ListTextColorPrimary</item>
        <item name="android:textColor">@color/color_uc_ListTextColorPrimary</item>
        <item name="textColorAlertDialogListItem">@color/colorBlack</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="actionBarStyle">@style/MyActionBarTheme</item>
        <item name="colorControlActivated">#FFffffff</item>
    </style>


    <style name="MyActionBarTheme" parent="Base.Widget.AppCompat.Light.ActionBar.Solid">
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.MyApp.Toolbar.Solid" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ThemeOverlay.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Parent theme sets colorControlNormal to textColorPrimary. -->
        <item name="android:textColorPrimary">@color/colorWhite</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="fontPath">fonts/Roboto-Regular.tff</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="fontPath">fonts/Roboto-Regular.tff</item>
    </style>

    <style name="StyleTextViewPrimary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_uc_ListTextColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="StyleTextViewSecondary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_uc_ListTextColorSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="StyleListSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_uc_ListSeparator</item>
    </style>



    <style name="StyleTextMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/menu_list_color_selector</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
